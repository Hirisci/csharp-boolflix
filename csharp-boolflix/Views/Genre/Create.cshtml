@model Genre

<div>
    <form asp-controller="Genre" asp-action="Create" method="post">
        <div class="form-group has-success mb-3">
            <label class="form-label mt-4" asp-for="@Model.Name">Nome</label>
            <input type="text" asp-for="@Model.Name" class="form-control" >
            <span class="valid-feedback" asp-validation-for="@Model.Name"></span>
        </div>
        <div class="text-end">
            <button type="submit"class="btn btn-primary btn-sm">Invia</button>
        </div>
    </form>
</div>